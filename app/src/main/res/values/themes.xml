<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="tema_claro" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFBB86FC</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF03DAC5</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#FFBB86FC</item>
        <!-- Color de fondo -->
        <item name="android:windowBackground">#FFFFFF</item>
    </style>

    <style name="tema_bosque" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#276A20</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#82cd88</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#276A20</item>
        <!-- Color de fondo -->
        <item name="android:windowBackground">#82cd88</item>
        <item name="colorOnBackground">#000000</item>
    </style>

    <style name="tema_mar" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0981D1</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#3FB8D9</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#0981D1</item>
        <!-- Color de fondo -->
        <item name="android:windowBackground">#B2FFFF</item>
        <item name="colorOnBackground">#000000</item>
    </style>

    <style name="tema_claro.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tema_claro.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="tema_claro.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>